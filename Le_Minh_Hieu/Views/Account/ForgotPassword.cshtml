@model HieuClothes.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - HieuClothes</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        body {
            background: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background: #ffffff;
            width: 360px;
            padding: 24px 28px 30px;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        }

        .logo {
            text-align: center;
            margin-bottom: 16px;
            font-weight: bold;
            font-size: 22px;
            letter-spacing: 1px;
            color: #333;
        }

        .logo span {
            color: #e67e22;
        }

        h2 {
            text-align: center;
            font-size: 18px;
            margin-bottom: 8px;
            color: #333;
        }

        .sub-title {
            text-align: center;
            font-size: 13px;
            color: #777;
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-size: 13px;
            margin-bottom: 6px;
            color: #555;
        }

        input[type="email"] {
            width: 100%;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 14px;
            margin-bottom: 6px;
        }

        input[type="email"]:focus {
            outline: none;
            border-color: #e67e22;
            box-shadow: 0 0 0 2px rgba(230, 126, 34, 0.15);
        }

        .validation-error {
            font-size: 12px;
            color: red;
            margin-bottom: 8px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px 12px;
            border: none;
            border-radius: 6px;
            background: #e67e22;
            color: #fff;
            font-size: 15px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 4px;
        }

        .btn-primary:hover {
            background: #cf711f;
        }

        .back-login {
            text-align: center;
            margin-top: 16px;
            font-size: 13px;
        }

        .back-login a {
            text-decoration: none;
            color: #e67e22;
        }

        .back-login a:hover {
            text-decoration: underline;
        }

        .note {
            margin-top: 10px;
            font-size: 12px;
            color: #999;
        }

        .success-message {
            margin-top: 10px;
            font-size: 13px;
            color: green;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="logo">Hieu<span>Clothes</span></div>

    <h2>Quên mật khẩu</h2>
    <p class="sub-title">
        Nhập địa chỉ email bạn đã đăng ký.  
        Chúng tôi sẽ gửi link để đặt lại mật khẩu.
    </p>

    @if (ViewBag.SuccessMessage != null)
    {
        <p class="success-message">@ViewBag.SuccessMessage</p>
    }

    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()

        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" placeholder="ví dụ: abc@gmail.com" />
        <span asp-validation-for="Email" class="validation-error"></span>

        <button type="submit" class="btn-primary">Gửi link đặt lại mật khẩu</button>

        <p class="note">
            Lưu ý: Hãy kiểm tra cả hộp thư rác (spam) nếu bạn không thấy email trong vài phút.
        </p>
    </form>

    <div class="back-login">
        <span>Nhớ mật khẩu rồi? </span>
        <a href="/Account/Login">Quay lại đăng nhập</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
</html>
